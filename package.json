{
  "name": "one-browser",
  "version": "1.0.0",
  "description": "Privacy-first, aesthetic Electron browser with glassmorphic UI.",
  "main": "main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:5173 && npm run start\"",
    "dev:renderer": "cd renderer && npm run dev",
    "build:renderer": "cd renderer && npm run build",
    "build": "npm run build:renderer && electron-builder",
    "postinstall": "cd renderer && npm install"
  },
  "keywords": [
    "electron",
    "browser",
    "privacy",
    "glassmorphism"
  ],
  "author": "The One Atom",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^35.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-chrome-extensions": "^3.0.0"
  },
  "build": {
    "appId": "com.onebrowser.app",
    "productName": "One Browser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "preload/**/*",
      "renderer/dist/**/*"
    ],
    "mac": {
      "icon": "logo.icns",
      "target": "dmg"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    }
  }
}